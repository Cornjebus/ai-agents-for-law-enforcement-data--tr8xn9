# API Configuration
# Base URL for backend API endpoints in the microservices architecture
NEXT_PUBLIC_API_URL=http://localhost:3000/api/v1

# Environment Configuration
# Application environment identifier (development, staging, production)
NEXT_PUBLIC_APP_ENV=development

# Application Configuration
# Display name of the application
NEXT_PUBLIC_APP_NAME=Autonomous Revenue Generation Platform

# Authentication Configuration
# OAuth 2.0 + OIDC authentication domain (Auth0/AWS Cognito)
NEXT_PUBLIC_AUTH_DOMAIN=auth.yourdomain.com

# OAuth 2.0 client identifier for application authentication
NEXT_PUBLIC_AUTH_CLIENT_ID=your-client-id

# Analytics Configuration (Optional)
# Google Analytics measurement ID for user interaction tracking
NEXT_PUBLIC_ANALYTICS_ID=G-XXXXXXXXXX

# Voice Services Configuration
# API key for voice service integration (Amazon Polly/Whisper)
NEXT_PUBLIC_VOICE_API_KEY=your-voice-api-key

# File Upload Configuration
# Maximum file size in bytes (default: 5MB)
NEXT_PUBLIC_MAX_FILE_SIZE=5242880

# Comma-separated list of allowed file extensions
NEXT_PUBLIC_ALLOWED_FILE_TYPES=.jpg,.png,.pdf